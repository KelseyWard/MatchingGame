<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/inGameText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:fontFamily="@font/holtwood_one_sc"
        android:text="@string/app_name"
        android:textSize="35sp"
        android:paddingTop="15dp"
        app:layout_constraintBottom_toTopOf="@id/card_format"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

    </TextView>

    <GridLayout
        android:id="@+id/card_format"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:useDefaultMargins="true"
        android:layout_marginTop="100dp"
        android:columnCount="4"
        android:rowCount="4"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="30dp">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/cardOne"
            style="@style/backOfCard"
            tools:ignore= "SpeakableTextPresentCheck" />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/cardTwo"
            tools:ignore= "SpeakableTextPresentCheck"
            style="@style/backOfCard"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/cardThree"
            style="@style/backOfCard"
            tools:ignore= "SpeakableTextPresentCheck"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/cardFour"
            style="@style/backOfCard"
            tools:ignore= "SpeakableTextPresentCheck"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/cardFive"
            style="@style/backOfCard"
            tools:ignore= "SpeakableTextPresentCheck"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/cardSix"
            style="@style/backOfCard"
            tools:ignore= "SpeakableTextPresentCheck"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/cardSeven"
            style="@style/backOfCard"
            tools:ignore= "SpeakableTextPresentCheck"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/cardEight"
            style="@style/backOfCard"
            tools:ignore= "SpeakableTextPresentCheck"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/cardNine"
            style="@style/backOfCard"
            tools:ignore= "SpeakableTextPresentCheck"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/cardTen"
            style="@style/backOfCard"
            tools:ignore= "SpeakableTextPresentCheck"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/cardEleven"
            style="@style/backOfCard"
            tools:ignore= "SpeakableTextPresentCheck"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/cardTwelve"
            style="@style/backOfCard"
            tools:ignore= "SpeakableTextPresentCheck"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/cardThirteen"
            style="@style/backOfCard"
            tools:ignore= "SpeakableTextPresentCheck"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/cardFourteen"
            style="@style/backOfCard"
            tools:ignore= "SpeakableTextPresentCheck"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/cardFifteen"
            style="@style/backOfCard"
            tools:ignore= "SpeakableTextPresentCheck"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/cardSixteen"
            style="@style/backOfCard"
            tools:ignore= "SpeakableTextPresentCheck"/>

    </GridLayout>





</androidx.constraintlayout.widget.ConstraintLayout>
